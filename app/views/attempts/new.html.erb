  <div data-container="0">
    <section class="masthead d-flex">
      <div class="container text-center my-auto">
        <div class="row h-100 align-items-center">
          <div class="col-12 text-center">
            <h1 style="color: #eee"><strong>Pour quels métiers êtes-vous fait ?</strong></h1>
          </div>
        </div>

        <div class="o-section-home__select-gender m-select-gender">

            <!-- button gender male-->
            <div data-button class="a-button-gender">
              <div class="a-button-gender__background">
                <div class="a-button-gender__circle a-button-gender__circle--1" style="opacity: 0.29699; transform: translate3d(0px, 0px, 0px) scale(0.999398, 0.999398);">
                </div>
                <div class="a-button-gender__circle a-button-gender__circle--2"  style="opacity: 0.0937528; transform: translate3d(0px, 0px, 0px) scale(0.993753, 0.993753);">
                </div>
              </div>
                <div class="a-button-gender__content">
                  <div class="a-button-gender__circle a-button-gender__circle--3" style="opacity: 0.9;"></div>
                  <div class="a-button-gender__text"><i class="fas fa-mars fa-2x"></i><br>Sportif</div>
                </div>
            </div>

          <!-- button gender female-->
          <div data-button class="a-button-gender">
            <div class="a-button-gender__background">
            <div class="a-button-gender__circle a-button-gender__circle--1" style="opacity: 0.29699; transform: translate3d(0px, 0px, 0px) scale(0.999398, 0.999398);"></div>
            <div class="a-button-gender__circle a-button-gender__circle--2" style="opacity: 0.0937528; transform: translate3d(0px, 0px, 0px) scale(0.993753, 0.993753);"></div>
            </div>
              <div class="a-button-gender__content">
                  <div class="a-button-gender__circle a-button-gender__circle--3" style="opacity: 0.9;">
                  </div>
                  <div class="a-button-gender__text"><i class="fas fa-venus fa-2x"></i><br>Sportive</div>
              </div>
            </div>
          </div>
      </div>
    </section>
  </div>


  <div class="container-quiz">
    <% @questions.each do |question| %>
<!--             if question == @questions.last
          redirect_to sss_path -->
    <div data-container="<%= @questions.index(question) + 1 %>">
      <div class="overlay"><h2 id="question-<%= question.id %>" class="text-center mb-5" data-question="<%= @questions.index(question) + 1 %>"> <%= question.question %> </h2></div>
        <div class="cards-quiz">
          <div class="row align-items-start text-center">
          <% question.answers.each do |answer| %>
            <div class="col-6 col-md-6 col-lg-4">
              <%= link_to answer_users_answers_path(answer), method: :post, remote: true do %>
                <div class="card-category-quiz" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_url(answer.photo)%>')">
                  <strong> <%= answer.answer %> </strong>
                </div>
              <% end %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Show results -->
<header class="masthead-results">
  <div class="container h-100 bg-overlay">
    <div class="row h-100 align-items-center">
      <div class="col-12 text-center">
          <div id="question-<%= @questions.last.id + 1 %>" data-question="9" data-container="9">
            <div class="button-results" >
            <%= link_to "Voir les résultats", survey_attempt_path(Survey.last.id, Attempt.last.id), method: :patch, class: "btn btn-warning btn-lg"  %>
          </div>
        </div>
       </div>
    </div>
  </div>
</header>
</div>


