<div data-container="0">
  <section class="masthead d-flex">
    <div class="container text-center my-auto">
      <div class="row h-100 align-items-center">
        <div class="col-12 text-center">
          <h1 style="color: #eee"><strong>Pour quel métier êtes-vous fait ?</strong></h1>
        </div>
      </div>
      <div class="o-section-home__select-gender m-select-gender js-select-gender">
        <div data-button data-href="/2" class="js-select-gender-button a-button-gender--man a-button-gender js-button-gender">
          <div class="a-button-gender__background">
            <div class="a-button-gender__circle a-button-gender__circle--1">
            </div>
            <div class="a-button-gender__circle a-button-gender__circle--2">
            </div>
          </div>
          <div class="a-button-gender__content">
            <div class="a-button-gender__circle a-button-gender__circle--3">
            </div>
            <div class="a-button-gender__text">Sportif
            </div>
          </div>
        </div>
        <div data-button data-href="/2" class="js-select-gender-button  a-button-gender js-button-gender">
          <div class="a-button-gender__background">
            <div class="a-button-gender__circle a-button-gender__circle--1">
            </div>
            <div class="a-button-gender__circle a-button-gender__circle--2">
            </div>
          </div>
          <div class="a-button-gender__content">
            <div class="a-button-gender__circle a-button-gender__circle--3">
            </div>
            <div class="a-button-gender__text">Sportive
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

  <div class="container-quiz">
    <% @questions.each do |question| %>
<!--             if question == @questions.last
          redirect_to sss_path -->
    <div data-container="<%= @questions.index(question) + 1 %>">
      <div class="overlay"><h2 id="question-<%= question.id %>" class="text-center" data-question="<%= @questions.index(question) + 1 %>"> <%= question.question %> </h2></div>
        <div class="cards-quiz">
          <div class="row align-items-start text-center">
          <% question.answers.each do |answer| %>
            <div class="col-xs-4">
              <%= link_to answer_users_answers_path(answer), method: :post, remote: true do %>
                <div class="card-category-quiz" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_url(answer.photo)%>')">
                  <%= answer.answer %>
                </div>
              <% end %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div id="question-<%= @questions.last.id + 1 %>" data-question="9" data-container="9">
      <div class="button-results" >
      <%= link_to "Voir les résultats", survey_attempt_path(Survey.last.id, Attempt.last.id), method: :patch, class: "btn btn-warning btn-lg"  %>
    </div>
  </div>
</div>
