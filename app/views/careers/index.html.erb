              <div class="card-category">CENTRE DE FORMATION
              </div>
              <div class="card-description">
                <h2><%= result.searchable.name %></h2>
                <p><%= result.searchable.address %>, <%= result.searchable.city %></p>
                <p><%= result.searchable.telephone %></p>
                <p><%= result.searchable.email %></p>
                <%= link_to result.searchable.website %>
              </div>
            </div>
            <% else %>
        </div>
