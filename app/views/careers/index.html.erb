<%= render 'shared/navbar' %>
<div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
        <div class="text-center sidebar-header">
          <%= image_tag @user_personality.career.personality_riasec.avatar_f, class: "avatar-large", alt: "avatar-large" %>
          <p class="text-center small"><%= @user_personality.career.personality_riasec.name %></p>
          <p class="text-center" id="career"><%= @user_personality.career.title %></p>
        </div>
      <ul class="list-unstyled CTAs">
      <li>
       <%= link_to "Refaire le test", new_survey_attempt_path(Survey.last), class: "btn-warning"%>
      </li>
      </ul>

        <ul class="list-unstyled CTAs components">
            <li class="active">
            <li>
              <%= link_to "Ma personnalité", results_path(current_user) %>
            </li>
                   <li>
                      <%=  link_to "Gérer mon profil", edit_user_registration_path  %>
                    </li>
            </li>
        </ul>
  </nav>
<!----SideNavbar----->
    <!-- Page Content -->
    <div id="content-search">
      <h2 class="search-title">Vous trouverez ici une liste de métiers et de centres de formation associés à votre recherche : <strong>"<%= params[:query] %>" </strong></h2>
      <div class="grid-search">
        <div class="cards-search">
          <div class="card-search">
            <% @results.each do |result| %>
              <% if result.searchable_type == "TrainingCenter" %>
                <div class="card-dashboard-search">
                  <div class="card-category-search training badge-info">CENTRE DE FORMATION</div>
                    <div class="card-description-search">
                      <h2> <%= result.searchable.name %> </h2>
                      <p><strong><i class="fas fa-map-marker-alt"></i></strong> <%= result.searchable.address %>, <%= result.searchable.city %></p>
                      <p><strong><i class="fas fa-at"></i></strong> <%= link_to "Site-web", result.searchable.website , :target => "_blank" %> </p>
                    </div>
                  </div>
                <% else %>
                <div class="card-dashboard-search">
                  <div class="card-category-search career badge-info">MÉTIER</div>
                    <div class="card-description-search">
                      <h2><strong><i class="fas fa-graduation-cap"></i></strong> <%= result.searchable.title %></h2>
                      <p><strong><i class="fas fa-hammer"></i></strong> <%= result.searchable.category %></p>
                    </div>
                  </div>
                <% end %>
              <% end %>
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


