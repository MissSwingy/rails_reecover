<%= render 'shared/navbar' %>
<div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
        <div class="sidebar-header">
          <%= image_tag @user_personality.career.personality_riasec.avatar_f, class: "avatar-large", alt: "avatar-large" %>
          <p><%= @user_personality.career.personality_riasec.name %></p>
          <p>Votre choix de métier :<br><%= @user_personality.career.title %></p>
          <h3><%= @user.first_name %><br><%= @user.last_name %></h3>
        </div>

        <ul class="list-unstyled components">
            <p>Votre Dashboard</p>
            <li class="active">
                <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Votre profil</a>
                <ul class="collapse list-unstyled" id="homeSubmenu">
                    <li>
                      <%=  link_to "Vos infos", edit_user_registration_path  %>
                    </li>
                    <li>
                        <a href="#">Home 2</a>
                    </li>
                    <li>
                        <a href="#">Home 3</a>
                    </li>
                </ul>
            </li>
            <li>
              <%= link_to "Votre personnalité", results_path(current_user) %>
            </li>
            <li>
                <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Vos métiers</a>
                <ul class="collapse list-unstyled" id="pageSubmenu">
                    <li>
                        <a href="#">Les formations</a>
                    </li>
                    <li>
                        <a href="#">Les subventions</a>
                    </li>
                    <li>
                        <a href="#">La santé</a>
                    </li>
                </ul>
            </li>
            <li>
                <a href="#">Réseautage</a>
            </li>
            <li>
                <a href="#">Contact</a>
            </li>
        </ul>

        <ul class="list-unstyled CTAs">
            <li>
                <a href="https://bootstrapious.com/tutorial/files/sidebar.zip" class="download">Download source</a>
            </li>
            <li>
                <a href="https://bootstrapious.com/p/bootstrap-sidebar" class="article">Retour à votre dashboard</a>
            </li>
        </ul>
    </nav>
<!-- Page Content -->
    <div id="content">
      <h2 class="title">Bienvenue <%= @user.first_name %> !</h2>
      <div class="grid">
        <div class="cards">
          <% @training_centers.each do |center| %>
            <div class="card-1">
              <div class="card-dashboard">
                <div class="card-category btn btn-info">CENTRE DE FORMATION</div>
                <div class="card-description">
                  <h2><%= center.name %></h2>
                  <p><%= center.full_address %></p>
                  <p> e-mail: <%= center.email %></p>
                  <p> téléphone: <%= center.telephone %></p>
                  <p> <%= link_to "Website", center.website, :target => "_blank" %> </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
            <!--       to uncomment when all controllers are created -->
        <div
          id="map"
          style="width: 100%;
          height: 600px;"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
          >
        </div>
      </div>
    </div>
<!-- Page Content  -->
