
<% I18n.translate %>

<body class="bg-gradient-warning">

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                      <%= link_to root_path do %>
                      <%= image_tag "logo-icon.png", height: 50 %>
                      <% end %>
                    <h1 class="h4 text-gray-900 mb-4">Se connecter</h1>
                  </div>
                    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="user form-inputs">
                        <%= f.input :email,
                                    required: false,
                                    autofocus: true,
                                    input_html: { autocomplete: "email" }, :placeholder => "Entrez votre email", class: 'form-user form-control-user' %>
                        <%= f.input :password,
                                    required: false,
                                    input_html: { autocomplete: "current-password" }, :placeholder => "Mot de passe" %>
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                      </div>

                      <div class="form-actions">
                        <%= f.button :submit, "Se connecter", class: 'btn btn-warning btn-block' %>
                      </div>
                    <% end %>
                    <hr>
                    <div class="text-center small">
                    <%= render "devise/shared/links" %>
                  </div>

              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

</body>
